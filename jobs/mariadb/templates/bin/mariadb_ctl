#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/mariadb/helpers/ctl_setup.sh 'mariadb'

export PORT=${PORT:-5000}
export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    #TODO: This is not correct, was changed when troubleshooting, will address when galera is sorted
    exec /var/vcap/packages/mariadb/bin/mysqld_safe start \
         >>$LOG_DIR/$JOB_NAME.stdout.log \
         2>>$LOG_DIR/$JOB_NAME.stderr.log

    # store pid in $PIDFILE
    echo $! > $PIDFILE
    ;;

  stop)
    /var/vcap/packages/mariadb/bin/mysqld_safe stop \
    #kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: mariadb_ctl {start|stop}"

    ;;

esac
exit 0